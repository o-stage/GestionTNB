<UserControl x:Class="TaxesV1.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TaxesV1"
             mc:Ignorable="d"
             VerticalAlignment="Stretch">
    <Grid>
        <Border Padding="5" Background="#a4a4a4">
            <Menu Background="{x:Null}">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="Ajouter declaration"/>
                <MenuItem Header="Tax sure Terrains non bati"/>
                <MenuItem Header="Parameters"/>

            </Menu>
        </Border>

    </Grid>
</UserControl>