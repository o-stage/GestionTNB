<DockPanel x:Class="TaxesV1.ManageUsers"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
           mc:Ignorable="d">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
        <Button Click="NewUser_OnClick" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <fa:IconImage Width="20" Height="20" Icon="UserPlus"
                              Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}" />
                <Label Padding="0" Margin="5 0" Content="New User"
                       Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}" />
            </StackPanel>
        </Button>
    </StackPanel>
    <DataGrid DockPanel.Dock="Right" Name="Users" CanUserAddRows="False" CanUserDeleteRows="False">
            
            <DataGrid.Columns>
                <!--
                <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
                -->

            </DataGrid.Columns>
        </DataGrid>
</DockPanel>