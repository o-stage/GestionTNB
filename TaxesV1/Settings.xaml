<DockPanel x:Class="TaxesV1.Settings"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:local="clr-namespace:TaxesV1"
           xmlns:r="clr-namespace:TaxesV1.Resources"
           xmlns:converter="clr-namespace:TaxesV1.MultiValueConverters"
           xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
           mc:Ignorable="d">
    <DockPanel.Resources>
        <ResourceDictionary>
            <converter:DifferenceConverter x:Key="DifferenceConverter" />
            <converter:AccountableTypeConverter x:Key="AccountableTypeConverter" />
        </ResourceDictionary>
    </DockPanel.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <ComboBox x:Name="LanguageComboBox" Width="120" SelectionChanged="ComboBox_SelectionChanged" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Label Content="English"/>
                <Label Content="Français"/>
                <Label Content="العربية"/>
            </ComboBox>
        </StackPanel>
    </DockPanel>
</DockPanel>