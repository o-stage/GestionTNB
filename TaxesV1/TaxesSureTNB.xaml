<Window x:Class="TaxesV1.TaxesSureTNB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TaxesV1"
        xmlns:r="clr-namespace:TaxesV1.Resources"
        mc:Ignorable="d"
        Title="Taxes Sure LesTerrains Non Batu" Width="800" Height="600" VerticalContentAlignment="Top">

    <Border Name="Body" Background="#d8d8d8">
    <StackPanel>
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <Label Content="{x:Static r:Strings.FileNumber}"/>
                <TextBox x:Name="FileNumberTextBox"  TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
                    <Label Content="{x:Static r:Strings.FileDate}" />
                    <DatePicker x:Name="FileDatePicker"/>
                </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="0">
                <Label Content="{x:Static r:Strings.StartDate}" />
                    <DatePicker x:Name="StartDatePicker"/>
                </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                <Label Content="{x:Static r:Strings.Accountable}" />
                <TextBox x:Name="AccountableTextBox" TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="1" Margin="0,1,0,43" Grid.RowSpan="2">
                <Label Content="{x:Static r:Strings.Type}" />
                <TextBox x:Name="TextBoxType" TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="3">
                <Label Content="{x:Static r:Strings.TaxableArea}" />
                <TextBox TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                <Label Content="N°T.F: (to be translated)" />
                <TextBox TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">
                <Label Content="{x:Static r:Strings.Place}" />
                <TextBox TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="3">
                <Label Content="{x:Static r:Strings.NonTaxableArea}" />
                <TextBox TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="3">
                <Label Content="{x:Static r:Strings.GrossArea}" />
                <TextBox TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="3">
                <Label Content="{x:Static r:Strings.TaxableArea}" />
                <TextBox TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" Margin="0,8,0,5">
                <Button Content="{x:Static r:Strings.CalculateTaxes}" Click="ButtonFetch_Click"/>
                <Button Content="{x:Static r:Strings.Print}" Click="ButtonFetch_Click"/>
         </StackPanel>
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" BorderBrush="#FF14DAA8"/>
        </Grid>

    </StackPanel>
    </Border>
</Window>