<Window x:Class="TaxesV1.TaxesSureTNB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TaxesV1"
        xmlns:r="clr-namespace:TaxesV1.Resources"
        xmlns:converter="clr-namespace:TaxesV1.MultiValueConverters"
        mc:Ignorable="d"
        Title="Taxes Sure LesTerrains Non Batu" Width="800" Height="580" VerticalContentAlignment="Top">

    <Window.Resources>
        <ResourceDictionary>
            <converter:DifferenceConverter x:Key="DifferenceConverter"></converter:DifferenceConverter>
        </ResourceDictionary>
    </Window.Resources>
    <Border Name="Body" Background="#d8d8d8">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid MinWidth="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0">
                        <Label Content="{x:Static r:Strings.FileNumber}" />
                        <TextBox x:Name="FileNumberTextBox" TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
                        <Label Content="{x:Static r:Strings.FileDate}" />
                        <DatePicker x:Name="FileDatePicker" SelectedDate="{Binding DateDossier, Mode=OneTime}"
                                    FirstDayOfWeek="Monday" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="0">
                        <Label Content="{x:Static r:Strings.StartDate}" />
                        <DatePicker x:Name="StartDatePicker" SelectedDate="{Binding DateDebut, Mode=OneTime}"
                                    FirstDayOfWeek="Monday" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                        <Label Content="{x:Static r:Strings.Accountable}" />
                        <TextBox x:Name="AccountableTextBox" TextWrapping="Wrap" IsReadOnly="True">
                            <MultiBinding StringFormat="{}{0} {1} ({2})">
                                <Binding Path="Redevable.Nom" />
                                <Binding Path="Redevable.Prenom" />
                                <Binding Path="Redevable.ID" />
                            </MultiBinding>
                        </TextBox>

                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="1" Margin="0,1,0,43" Grid.RowSpan="2">
                        <Label Content="{x:Static r:Strings.Type}" />
                        <TextBox x:Name="TextBoxType" TextWrapping="Wrap" Text="{Binding Redevable.Type, Mode=OneTime}"
                                 IsReadOnly="True" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="3">
                        <Label Content="{x:Static r:Strings.TaxableArea}" />
                        <TextBox TextWrapping="Wrap" Text="{Binding Terrain.SuperficeTaxable, Mode=OneTime}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                        <Label Content="N°T.F: (to be translated)" />
                        <TextBox TextWrapping="Wrap" Text="{Binding TerrainID, Mode=OneTime}" IsReadOnly="True" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">
                        <Label Content="{x:Static r:Strings.Place}" />
                        <TextBox TextWrapping="Wrap" Text="{Binding Terrain.Lieu, Mode=OneTime}" IsReadOnly="True" />
                    </StackPanel>
                    <StackPanel Grid.Column="2" Grid.Row="3">
                        <Label Content="{x:Static r:Strings.NonTaxableArea}" />
                        <TextBox TextWrapping="Wrap" IsReadOnly="True">
                            <MultiBinding Converter="{StaticResource DifferenceConverter}">
                                <Binding Path="Terrain.SuperficeBrute" />
                                <Binding Path="Terrain.SuperficeTaxable" />
                            </MultiBinding>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="3">
                        <Label Content="{x:Static r:Strings.GrossArea}" />
                        <TextBox TextWrapping="Wrap" Text="{Binding Terrain.SuperficeBrute, Mode=OneTime}"
                                 IsReadOnly="True" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="3">
                        <Label Content="{x:Static r:Strings.TaxableArea}" />
                        <TextBox TextWrapping="Wrap" Text="{Binding Terrain.SuperficeTaxable, Mode=OneTime}"
                                 IsReadOnly="True" />
                    </StackPanel>
                </Grid>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Grid.Column="1">
                    <TextBlock TextWrapping="Wrap" Text="Resume" VerticalAlignment="Stretch" Padding="10,5,10,0" />
                    <TextBlock TextWrapping="Wrap" Text="Nombre dec non deposer" Padding="10,5,10,0" />
                    <TextBlock Name="NumberOfNonDeposedDeclarations" TextWrapping="Wrap" Padding="10,5,10,0" />
                    <TextBlock TextWrapping="Wrap" Text="Total principal a payer" Padding="10,5,10,0" />
                    <TextBlock Name="TotalPrincipal" TextWrapping="Wrap" Padding="10,5,10,0" />
                    <TextBlock TextWrapping="Wrap" Text="Total amends a payer" Padding="10,5,10,0" />
                    <TextBlock Name="TotalAmends" TextWrapping="Wrap" Padding="10,5,10,0" />
                    <TextBlock TextWrapping="Wrap" Text="Total a payer" Padding="10,5,10,0" />
                    <TextBlock Name="Total" TextWrapping="Wrap" Padding="10,5,10,0" />
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top">
                <Button Content="{x:Static r:Strings.CalculateTaxes}" Click="ButtonCalculateTaxes_OnClick" />
                <Button Content="{x:Static r:Strings.Print}" Click="ButtonFetch_Click" />
            </StackPanel>
            <DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="2" ColumnWidth="*"
                      CanUserAddRows="False" />

        </Grid>
    </Border>
</Window>